{
  "name": "@m4rc3l05/the-office-quote",
  "version": "0.2.15",
  "exports": "./main.ts",
  "tasks": {
    "run": "./scripts/embed.ts && deno run --cached-only main.ts",
    "compile": "./scripts/embed.ts && deno compile --cached-only --include ./embed.json -o ./.bin/the-office-quote ./main.ts",
    "deps:lock": "deno cache --frozen=false main.ts",
    "deps": "deno cache --reload main.ts"
  },
  "lint": {
    "exclude": ["embed.json"],
    "rules": {
      "include": ["verbatim-module-syntax"]
    }
  },
  "fmt": {
    "exclude": ["embed.json"]
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@1.0.6",
    "@std/yaml": "jsr:@std/yaml@1.0.5"
  }
}
