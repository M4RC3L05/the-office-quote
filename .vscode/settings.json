{
  "editor.formatOnSave": true,
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--path-mode=abs",
    "--fast-only"
  ],
  "go.formatTool": "custom",
  "go.alternateTools": {
    "customFormatter": "golangci-lint"
  },
  "go.formatFlags": [
    "fmt",
    "--stdin"
  ],
  "gopls": {
    "ui.semanticTokens": true
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[json]": {
    "files.insertFinalNewline": true
  },
  "[jsonc]": {
    "files.insertFinalNewline": true
  }
}
